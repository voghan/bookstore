<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Panel"
    title="Teaser Content">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <teaser_title
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Title for content."
                    fieldLabel="Title"
                    name="./jcr:cta_title"
                    xtype="textfield"/>
                <teaser_content
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Content displayed inside component."
                    fieldLabel="Content"
                    name="./jcr:cta_content"
                    xtype="richtext">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <format
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <justify
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <spellcheck
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <subsuperscript
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                        <misctools
                            jcr:primaryType="nt:unstructured"
                            features="*"/>
                    </rtePlugins>
                </teaser_content>
                <teaser_link
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Link label displayed inside content."
                    fieldLabel="Link Text"
                    name="./jcr:cta_link_text"
                    xtype="textfield"/>
            </items>
        </basic>
    </items>
</jcr:root>
